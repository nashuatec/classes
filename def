class ContaBancaria:
    def __init__(self, saldo_inicial=0):
        self._saldo = saldo_inicial  # Atributo privado

    def depositar(self, valor):
        if valor > 0:
            self._saldo += valor
            print(f"Dep칩sito de R${valor} realizado com sucesso.")
        else:
            print("Valor de dep칩sito inv치lido.")

    def sacar(self, valor):
        if valor > self._saldo:
            print("Saldo insuficiente para realizar o saque.")
        elif valor > 0:
            self._saldo -= valor
            print(f"Saque de R${valor} realizado com sucesso.")
        else:
            print("Valor de saque inv치lido.")

    def mostrar_saldo(self):
        return f"Saldo atual: R${self._saldo}"

# Exemplo de uso
conta = ContaBancaria(100)
conta.depositar(50)
print(conta.mostrar_saldo())
conta.sacar(30)
print(conta.mostrar_saldo())
conta.sacar(200)  # Teste de saldo insuficiente